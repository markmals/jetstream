{
    "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 100,
        "singleQuote": true,
        "proseWrap": "always"
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any",
                "no-namespace"
            ]
        }
    },
    "tasks": {
        "drink": "deno run --allow-net --unstable-net --unstable-hmr ./src/main.ts"
    }
}
